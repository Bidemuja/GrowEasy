<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        app:headerLayout="@layout/header"
        app:menu="@menu/menu_principal"
        android:layout_gravity="start">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="220dp"
            android:orientation="horizontal"
            android:padding="10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/grey"
                app:cardElevation="5dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/grey"
                app:cardElevation="5dp" />
        </LinearLayout>
    </com.google.android.material.navigation.NavigationView>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/grey_button"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                app:titleTextColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:navigationIcon="@drawable/menu"
                app:titleMargin="0dp" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="380dp"
                android:layout_height="120dp"
                android:layout_marginTop="120dp"
                android:orientation="horizontal"
                android:padding="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/toolbar">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/variant_grey"
                    app:cardElevation="5dp">

                    <RelativeLayout
                        android:id="@+id/relativeLayout1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/títuloHumedad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="10dp"
                            android:text="Humedad del Suelo"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/imageView11"
                            android:layout_width="53dp"
                            android:layout_height="67dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="18dp"
                            android:layout_marginEnd="63dp"
                            app:srcCompat="@drawable/drop" />

                        <Button
                            android:id="@+id/button3"
                            android:layout_width="55dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="-4dp"
                            android:layout_marginEnd="-3dp"
                            android:background="@color/variant_grey"
                            android:text=">"
                            app:layout_constraintEnd_toEndOf="parent" />

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="41dp"
                            android:layout_marginTop="34dp"
                            android:text="50%"
                            android:textSize="30sp" />

                        <TextView
                            android:id="@+id/textView15"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="45dp"
                            android:layout_marginTop="40dp"
                            android:layout_marginBottom="34dp"
                            android:text="Actual" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="380dp"
                android:layout_height="120dp"
                android:layout_marginTop="120dp"
                android:orientation="horizontal"
                android:padding="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/linearLayout">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/variant_grey"
                    app:cardElevation="5dp">

                    <RelativeLayout
                        android:id="@+id/relativeLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/títuloHumedad2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="10dp"
                            android:text="Luz Ambiente"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/imageView12"
                            android:layout_width="53dp"
                            android:layout_height="67dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="18dp"
                            android:layout_marginEnd="63dp"
                            app:srcCompat="@drawable/sun" />

                        <Button
                            android:id="@+id/button4"
                            android:layout_width="55dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="-4dp"
                            android:layout_marginEnd="-3dp"
                            android:background="@color/variant_grey"
                            android:text=">"
                            app:layout_constraintEnd_toEndOf="parent" />

                        <TextView
                            android:id="@+id/txtluz"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="41dp"
                            android:layout_marginTop="34dp"
                            android:text="50%"
                            android:textSize="30sp" />

                        <TextView
                            android:id="@+id/textView150"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="45dp"
                            android:layout_marginTop="40dp"
                            android:layout_marginBottom="34dp"
                            android:text="Actual" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llTemperaturaAmbiente"
                android:layout_width="380dp"
                android:layout_height="120dp"
                android:layout_marginTop="120dp"
                android:orientation="horizontal"
                android:padding="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/linearLayout2">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/variant_grey"
                    app:cardElevation="5dp">

                    <RelativeLayout
                        android:id="@+id/rlTemperaturaAmbiente"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txtTemperaturaAmbiente"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="10dp"
                            android:text="Temperatura Ambiente"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/imgTemperaturaAmbiente"
                            android:layout_width="53dp"
                            android:layout_height="67dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="18dp"
                            android:layout_marginEnd="63dp"
                            app:srcCompat="@drawable/temperature" />

                        <Button
                            android:id="@+id/btnDashboardAmbiente"
                            android:layout_width="55dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="-4dp"
                            android:layout_marginEnd="-3dp"
                            android:background="@color/variant_grey"
                            android:text=">"
                            app:layout_constraintEnd_toEndOf="parent" />

                        <TextView
                            android:id="@+id/txtVariableAmbiente"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="41dp"
                            android:layout_marginTop="34dp"
                            android:text="50%"
                            android:textSize="30sp" />

                        <TextView
                            android:id="@+id/txtActualTemperatura"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="45dp"
                            android:layout_marginTop="40dp"
                            android:layout_marginBottom="34dp"
                            android:text="Actual" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llSuelo"
                android:layout_width="380dp"
                android:layout_height="120dp"
                android:layout_marginTop="120dp"
                android:orientation="horizontal"
                android:padding="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/llTemperaturaAmbiente">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/variant_grey"
                    app:cardElevation="5dp">

                    <RelativeLayout
                        android:id="@+id/rlSuelo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txtSuelo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="10dp"
                            android:text="Temperatura del Suelo"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/imgSuelo"
                            android:layout_width="53dp"
                            android:layout_height="67dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="18dp"
                            android:layout_marginEnd="63dp"
                            app:srcCompat="@drawable/soil_temperature" />

                        <Button
                            android:id="@+id/btnDashboardSuelo"
                            android:layout_width="55dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="-4dp"
                            android:layout_marginEnd="-3dp"
                            android:background="@color/variant_grey"
                            android:text=">"
                            app:layout_constraintEnd_toEndOf="parent" />

                        <TextView
                            android:id="@+id/txtVariableSuelo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="41dp"
                            android:layout_marginTop="34dp"
                            android:text="50%"
                            android:textSize="30sp" />

                        <TextView
                            android:id="@+id/txtActualSuelo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="45dp"
                            android:layout_marginTop="40dp"
                            android:layout_marginBottom="34dp"
                            android:text="Actual" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.drawerlayout.widget.DrawerLayout>